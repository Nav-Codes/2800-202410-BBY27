<%- include('templates/header'); %>

<link rel="stylesheet" href="../public/CSS/editProfile.css">

<div class="container text-center">
  <form id="uploadProfilePictureForm" action="/uploadProfilePicture" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="profilePictureInput">Profile Picture</label>
      <input name="profilePicture" type="file" class="form-control" id="profilePictureInput">
    </div>
    <button type="submit" class="btn btn-primary">Upload Profile Picture</button>
  </form>

  <form id="editUsernameForm">
      <div class="form-group">
        <label for="usernameInput">New UserName</label>
        <input name="name" type="text" class="form-control" id="usernameInput" aria-describedby="usernameHelp" placeholder="Enter new username">
        <div id="usernameError" class="error-message"></div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <form id="editPasswordForm">
      <div class="form-group">
          <label for="currentPasswordInput">Enter Current Password</label>
          <input name="curpassword" type="password" class="form-control" id="currentPasswordInput" aria-describedby="currentPasswordHelp">
          <div id="currentPasswordError" class="error-message"></div>
      </div>
      <div class="form-group">
        <label for="newPasswordInput">Enter New Password</label>
        <input name="newPass" type="password" class="form-control" id="newPasswordInput" aria-describedby="newPasswordHelp">
        <div id="newPasswordError" class="error-message"></div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<script src="../public/js/editProfile.js"></script>


<%- include('templates/modalEdit')  %>
<%-include('templates/footer');%>