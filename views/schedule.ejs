<%-include('templates/header');%>
    <head>
        <style>
            /* Custom CSS for horizontal scrolling */
            .scrolling-wrapper {
                overflow-x: auto;
                white-space: nowrap;
            }

            .card {
                display: inline-block;
                width: 150px;
                height: 400px;
                overflow-x: hidden;
                /* Adjust as needed */
                margin-right: 10px;
                /* Adjust as needed */
            }

            li {
                margin-left: -25px;
            }
        </style>
    </head>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h2>Weekly Workout Schedule</h2>
                <div class="scrolling-wrapper">
                    <%  for (let day in workouts[0]) {
                            if (workouts[0][day][0] == undefined) {
                                continue;
                            } 
                            let currentDay = '' + day; %>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= currentDay; %>
                                </h5>
                                <ul>
                                    <% for (let j = 0; j < workouts[0][day].length; j++) { %>
                                        <li>
                                            <%= //find a way to get length of string so you can add br tag appropriately
                                                workouts[0][day][j] %>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                        <% } %>
                    <!-- Cards -->
                    <!-- Add more cards here -->
                </div>
            </div>
        </div>
    </div>

    <!-- edit schedule -->
    <%-include('templates/footer');%>