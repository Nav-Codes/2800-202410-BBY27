<%- include("templates/header") %>

<style>
    /* Base styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .button {
        display: inline-block;
        padding: 15px 30px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .button.signup {
        background-color: #EBB0D7;
        color: black;
    }

    .button.login {
        background-color: #A8EEE1;
        color: black;
    }

    .button:hover {
        background-color: #ccc;
    }

    /* Grid layout */
    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 50px;
    }

    .grid-item {
        text-align: center;
    }

    /* Responsive adjustments */
    @media (max-width: 600px) {
        .grid-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="container">
    <div class="grid-container">
        <div class="grid-item">
            <img src="/public/WeFitLogo.png" alt="WeFit Logo" style="width: 75%; height: 13vh;">
            <h1>Welcome to WeFit!</h1>
            <h3>Sign up or log in to get started</h3>
            <br>
            <a href="/createUser" class="button signup">Sign Up</a>
        </div>
        <div class="grid-item">
            <a href="/login" class="button login">Login</a>
        </div>
    </div>
</div>

<%- include("templates/footer") %>
